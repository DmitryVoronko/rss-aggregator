<resources>

    <style name="MainAppTheme" parent="Theme.AppCompat.Light.DarkActionBar"/>

    <style name="Green" parent="MainAppTheme">
        <item name="colorPrimary">@color/greenColorPrimary</item>
        <item name="colorPrimaryDark">@color/greenColorPrimaryDark</item>
        <item name="colorAccent">@color/greenColorAccent</item>
    </style>

    <style name="Indigo" parent="MainAppTheme">
        <item name="colorPrimary">@color/indigoColorPrimary</item>
        <item name="colorPrimaryDark">@color/indigoColorPrimaryDark</item>
        <item name="colorAccent">@color/indigoColorPrimaryAccent</item>
    </style>

    <style name="Green.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
