<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/card_default_height"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/card_margin"
    android:layout_marginRight="@dimen/card_margin"
    android:layout_marginLeft="@dimen/card_margin"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/card_corner_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/article_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="@dimen/title_right_and_left_padding"
            android:paddingRight="@dimen/title_right_and_left_padding"
            android:paddingTop="@dimen/title_top_padding"
            android:textSize="@dimen/title_text_size"/>

        <TextView
            android:id="@+id/article_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/article_title"
            android:padding="@dimen/description_text_padding"
            android:textSize="@dimen/description_text_size"/>
        <ImageButton
            android:id="@+id/feed_object_share_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/article_description"
            android:layout_alignParentRight="true"
            android:background="@color/cardview_light_background"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="@dimen/description_text_padding"
            android:clickable="true"
            card_view:srcCompat="@drawable/ic_share_black_24dp"
            android:contentDescription="@string/share_button_description"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
